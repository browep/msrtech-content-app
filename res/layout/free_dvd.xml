<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="120px" android:layout_height="wrap_content" android:src="@drawable/free_dvd"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/free_dvd_blurb"
                  style="@style/BaseScreen"
                  android:layout_margin="3px"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/field_container"
            android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">

    </LinearLayout>
    <Button android:onClick="onSubmit"
            android:layout_width="120px"
            android:layout_height="45px"
            android:text="Submit"
            android:layout_gravity="center_vertical|center_horizontal|center"
            />

</LinearLayout>