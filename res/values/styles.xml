<resources>
    <style name="DefaultListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!--<item name="android:paddingTop">12px</item>-->
        <!--<item name="android:paddingBottom">12px</item>-->
    </style>
    <style name="DefaultListItemTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">5px</item>
        <item name="android:paddingTop">24px</item>
        <item name="android:paddingBottom">24px</item>
        <item name="android:layout_margin">12px</item>
    </style>

    <style name="ChicletButton" parent="HomeButton">
        <item name="android:layout_width">86px</item>
        <item name="android:layout_height">86px</item>
      <item name="android:textSize">16sp</item>
      <item name="android:singleLine">false</item>
    </style>

    <style name="HomeButton" >
        <item name="android:layout_width">256px</item>
        <item name="android:layout_height">72px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="HomeRow">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">center_horizontal</item>
     </style>

    <style name="HomeChiclet">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">10px</item>
        <item name="android:layout_weight">50</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="BaseScreen">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BaseScreenLabel" parent="BaseScreen">
        <item name="android:layout_marginLeft">3px</item>
    </style>
    <style name="ShareOption">
        <item name="android:layout_width">80px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_margin">10px</item>
    </style>

</resources>